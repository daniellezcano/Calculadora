<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/numero3"
    tools:context=".Main3Activity">

    <TextView
        android:id="@+id/pant"
        android:layout_width="351dp"
        android:layout_height="86dp"
        android:layout_marginTop="68dp"
        android:background="@android:drawable/button_onoff_indicator_on"
        android:textColor="@android:color/black"
        android:textSize="70sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pant">

        <Button
            android:id="@+id/buttonC"
            android:layout_width="177dp"
            android:layout_height="match_parent"
            android:onClick="botonBorrar"
            android:text="C"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:drawable/ic_menu_gallery"
            android:backgroundTint="@color/cardview_light_background"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonDiv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="botones"
            android:text="/"
            android:textSize="40sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow">

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="botones"
            android:text="7"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:onClick="botones"
            android:text="8"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:onClick="botones"
            android:text="9"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonMultiplicar"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:onClick="botones"
            android:text="*"
            android:textSize="40sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow2">

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="botones"
            android:text="4"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:onClick="botones"
            android:text="5"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:onClick="botones"
            android:text="6"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonSumar"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:onClick="botones"
            android:text="+"
            android:textSize="40sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow3">

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="botones"
            android:text="1"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:onClick="botones"
            android:text="2"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:onClick="botones"
            android:text="3"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonRestar"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:onClick="botones"
            android:text="-"
            android:textSize="40sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableRow4">

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="botones"
            android:text="0"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonIgual"
            android:layout_width="178dp"
            android:layout_height="90dp"
            android:onClick="botonIgual"
            android:text="="
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonComa"
            android:layout_height="90dp"
            android:onClick="botones"
            android:text="."
            android:textSize="40sp"
            android:textStyle="bold" />
    </TableRow>

</android.support.constraint.ConstraintLayout>