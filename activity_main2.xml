<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/numeros"
    tools:context=".Main2Activity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="245dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="8dp"
        android:background="@android:drawable/button_onoff_indicator_on"
        android:foregroundTint="@android:color/background_dark"
        android:text="Registrate!"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tx_usuario"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        android:background="@android:drawable/button_onoff_indicator_on"
        android:bufferType="normal"
        android:ellipsize="none"
        android:ems="10"
        android:foregroundTint="@android:color/black"
        android:hint="Nombre de usuario:"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintBottom_toTopOf="@+id/tx_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/tx_email"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:background="@android:drawable/button_onoff_indicator_on"
        android:bufferType="normal"
        android:ellipsize="none"
        android:ems="10"
        android:foregroundTint="@android:color/black"
        android:hint="Email:"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_usuario"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/tx_contraseña"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:background="@android:drawable/button_onoff_indicator_on"
        android:bufferType="normal"
        android:ems="10"
        android:foregroundTint="@android:color/black"
        android:hint="Contraseña:"
        android:inputType="text|textPassword"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_email"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/tx_ccontraseña"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:background="@android:drawable/button_onoff_indicator_on"
        android:bufferType="normal"
        android:ems="10"
        android:foregroundTint="@android:color/black"
        android:hint="Confirmar contraseña:"
        android:inputType="text|textPassword"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_contraseña"
        tools:visibility="visible" />

    <Button
        android:id="@+id/botonFoto"
        android:layout_width="90dp"
        android:layout_height="69dp"
        android:background="@android:drawable/ic_menu_camera"
        android:backgroundTint="@android:color/holo_green_light"
        android:backgroundTintMode="add"
        android:onClick="botonFoto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.109"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_ccontraseña"
        app:layout_constraintVertical_bias="0.408" />

    <Button
        android:id="@+id/botonGuardar"
        android:layout_width="113dp"
        android:layout_height="58dp"
        android:layout_marginBottom="36dp"
        android:background="@android:drawable/button_onoff_indicator_on"
        android:onClick="botonGuardar"
        android:text="Guardar"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.761"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imagen"
        android:layout_width="197dp"
        android:layout_height="137dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/botonGuardar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.711"
        app:layout_constraintStart_toEndOf="@+id/botonFoto"
        app:layout_constraintTop_toBottomOf="@+id/tx_ccontraseña"
        app:layout_constraintVertical_bias="0.553" />


</android.support.constraint.ConstraintLayout>


